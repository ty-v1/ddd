// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Project {
  id String @id @db.Char(26)
  name String @db.VarChar(256)
  description String @db.VarChar(512)
  created_at DateTime
  updated_at DateTime

  labels Label[]
  tasks Task[]
}

model Label {
  id String @id @db.Char(26)
  name String @db.VarChar(32)
  description String @db.VarChar(512)
  is_default Boolean
  color String @db.Char(7)
  project_id String @db.Char(26)
  created_at DateTime
  updated_at DateTime

  project Project @relation(fields: [project_id], references: [id])
  tasks LabelsOnTasks[]

  @@index([project_id], name: "project")
}

model Task {
  id String @id @db.Char(26)
  name String @db.VarChar(256)
  description String @db.VarChar(5192)
  project_id String @db.Char(26)
  created_at DateTime
  updated_at DateTime

  project Project @relation(fields: [project_id], references: [id])
  labels LabelsOnTasks[]

  @@index([project_id], name: "project")
}

model LabelsOnTasks {
  task Task @relation(fields: [task_id], references: [id])
  task_id String @db.Char(26)

  label Label @relation(fields: [label_id], references: [id])
  label_id String @db.Char(26)

  @@id([task_id, label_id])
}
